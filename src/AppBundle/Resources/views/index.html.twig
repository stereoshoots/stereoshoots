{% extends 'AppBundle::base.html.twig' %}
{% block page_title %}уголок для творческих людей{% endblock %}
{% block body %}
    <div class="container">
        
        {% if app.user %}
        aa
        {% else %}
                <h1 class="text-white welcome-heading" align="center">Добро пожаловать на Stereoshoots</h1>
                <p class="lead text-white" align="center">Уголок для творческих личностей</p>
                <div class="block-center">
                    <div class="panel-default panel">
                    <div class="panel-body">
                        <h3 style="margin-top:10px;margin-left:15px;">Зарегистрировуйте аккаунт или зайдите под своим именем</h3>
                        <div class="col-sm-6">
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal fos_user_registration_register">
                            <fieldset>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-lg-2 control-label" style="width:100%;text-align:left">Логин</label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'id' : 'inputLogin', 'placeholder' : 'Логин'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-lg-2 control-label" style="width:100%;text-align:left">Пароль</label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'id' : 'inputPassword', 'placeholder' : 'Пароль'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-lg-2 control-label" style="width:100%;text-align:left">Еще раз</label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'id' : 'inputPasswordSecond', 'placeholder' : 'Подтвердите пароль'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail" class="col-lg-2 control-label" style="width:100%;text-align:left;">E-mail</label>
                                        <div class="col-lg-10">
                                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'id' : 'inputEmail', 'placeholder' : 'Почтовый адрес'} }) }}
                                        </div>
                                    </div>
                                    {{ form_widget(form._token, { 'attr': {'type': 'hidden'} }) }}
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            <input class="btn btn-default" type="submit" value="Зарегистрировать" />
                                        </div>
                                    </div>
                            </fieldset>
                        </form>
                        </div>
                        <div class="col-sm-6">
                            <form action="{{ path("fos_user_security_check") }}" method="POST" class="form-horizontal fos_user_registration_register">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                <fieldset>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-lg-2 control-label" style="width:100%;text-align:left;">Логин</label>
                                        <div class="col-lg-10">
                                            <input type="text" id="username" class="form-control" name="_username" placeholder="Логин" required="required" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-lg-2 control-label" style="width:100%;text-align:left;">Пароль</label>
                                        <div class="col-lg-10">
                                            <input type="password" id="password" class="form-control" name="_password" placeholder="Пароль" required="required" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword" class="col-lg-2 control-label">Запомнить</label>
                                        <div class="col-lg-10">
                                            <input type="checkbox" id="remember_me" name="_remember_me" style="margin: 18px 0 0 15px" value="on" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="Вход" />
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
        {% endif %}
        </div>
    </div>
{% endblock %}